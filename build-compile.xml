<project>
  <target name="_init-compile">
    <mkdir dir="${build.dir}"/>
    <mkdir dir="${jar.dir}"/>
  </target>

  <target name="compile" depends="_init-compile" description="Compile all modules">
    <for list="${modules}" param="module">
      <sequential>
        <_compile module="@{module}"/>
      </sequential>
    </for>
  </target>

  <target name="jars" depends="oldsims, compile" description="Create all module jars">
    <for list="${modules}" param="module">
      <sequential>
        <_jar module="@{module}"/>
      </sequential>
    </for>
  </target>

  <macrodef name="_compile">
    <attribute name="module"/>
    <sequential>
      <if>
        <not><isset property="@{module}.compiled"/></not>
        <then>
          <!-- Check for dependencies -->
          <propertycopy property="deps" from="modules.@{module}.depend" override="true"/>
          <for list="${deps}" param="dep">
            <sequential>
              <_compile module="@{dep}"/>
              <_jar module="@{dep}"/>
            </sequential>
          </for>
          <mkdir dir="${build.dir}/@{module}/classes"/>
          <javac includeantruntime="false" srcdir="${modules.dir}/@{module}/src" destdir="${build.dir}/@{module}/classes" debug="${debug}">
            <classpath>
              <path refid="path.common"/>
            </classpath>
            <include name="**/*.java"/>
            <compilerarg value="${javac.flags}"/>
          </javac>
          <property name="@{module}.compiled" value="true"/>
        </then>
      </if>
    </sequential>
  </macrodef>

  <macrodef name="_jar">
    <attribute name="module"/>
    <sequential>
      <manifest file="${modules.dir}/@{module}/manifest" mode="update">
      </manifest>
      <jar destfile="${jar.dir}/@{module}.jar" manifest="${modules.dir}/@{module}/manifest">
        <fileset dir="${build.dir}/@{module}/classes" includes="**/*.class"/>
        <fileset dir="${modules.dir}/@{module}/resources" erroronmissingdir="false"/>
      </jar>
    </sequential>
  </macrodef>
</project>